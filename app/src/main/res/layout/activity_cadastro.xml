<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.r2dev2.storebot.CadastroActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textTitle"
            tools:text="Novo Produto"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Código"
            android:ems="10"
            android:id="@+id/editCod"
            android:layout_weight="0.03" />

        <Button
            android:text="SCAN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnScan"
            android:layout_weight="0.03"
            android:onClick="scanBar (CadastroActivity)" />

        <TextView
            android:text="Descrição"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textDesc"
            android:textSize="18sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText8"
            android:layout_weight="0.19"
            android:hint="Digite uma descrição" />

        <TextView
            android:text="Foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textPhoto"
            android:textSize="18sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="0.32">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/abc_ab_share_pack_mtrl_alpha"
                android:id="@+id/imageView2"
                android:layout_weight="0.16" />

            <Button
                android:text="Câmera"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/buttonPhoto"
                android:layout_weight="0.04"
                android:elevation="0dp" />
        </LinearLayout>

        <TextView
            android:text="Endereço"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textAdress"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15" />

        <Button
            android:text="SALVAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonFinish"
            android:layout_weight="0.10"
            android:textSize="24sp" />

    </LinearLayout>
</RelativeLayout>
